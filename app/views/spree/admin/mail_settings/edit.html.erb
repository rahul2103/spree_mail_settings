<% content_for :page_title do %>
  <%= Spree.t(:mail_setting) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon 'envelope', Spree.t('mail_methods.send_testmail'), testmail_admin_mail_setting_path,
    method: :post, title: Spree.t('mail_methods.send_testmail'), class: 'send_mail btn btn-default' %>
<% end %>

<%= form_with model: [:admin, @mail_setting], url: admin_mail_setting_path do |f| %>
  <fieldset>
    <%= render 'form', f: f %>
    <div class="form-actions actions" data-hook="buttons">
      <%= f.submit class:'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>
