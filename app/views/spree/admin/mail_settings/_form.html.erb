<div data-hook="admin_mail_method_f_fields">
  <div class="row">
    <div class="col-md-6" data-hook="general">
      <fieldset>
        <legend><%= Spree.t(:general) %></legend>
        <div class="form-group">
          <div class="inline-radio">
            <%= f.check_box :enable_mail_delivery %>
            <%= f.label :enable_mail_delivery %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :mails_from %>
          <%= f.text_field :mails_from, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :mail_bcc %>
          <%= f.text_field :mail_bcc, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :intercept_email %>
          <%= f.text_field :intercept_email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :mail_host %>
          <%= f.text_field :mail_host, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :mail_domain %>
          <%= f.text_field :mail_domain, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :mail_port %>
          <%= f.number_field :mail_port, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :secure_connection_type %>
          <%= f.select :secure_connection_type, ::SpreeMailSettings::Configuration::SECURE_CONNECTION_TYPES, {}, class: 'select2' %>
        </div>

        <div class="form-group">
          <%= f.label :mail_auth_type %>
          <%= f.select :mail_auth_type, ::SpreeMailSettings::Configuration::MAIL_AUTH, {}, class: 'select2' %>
        </div>

        <div class="form-group">
          <%= f.label :smtp_username %>
          <%= f.text_field :smtp_username, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :smtp_password %>
          <%= f.password_field :smtp_password, class: 'form-control', value: current_store.try(:mail_setting).try(:smtp_password) %>
        </div>
        <%= f.hidden_field :store_id, value: current_store.id %>
      </fieldset>
    </div>
  </div>
</div>
